{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "bun"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "drizzle.config.ts",
    "betterbase.config.ts"
  ]
}
